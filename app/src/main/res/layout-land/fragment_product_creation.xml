<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.mobilemakers.compareprice.MarketCreationFragment"
    android:orientation="vertical">

    <TextView android:id="@+id/text_view_title"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/text_view_product_title"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
         />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <EditText android:id="@+id/edit_text_product_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_product_name"
            android:gravity="center" />

        <EditText android:id="@+id/edit_text_product_precio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_price"
            android:gravity="center"
            android:numeric="integer|decimal" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_product_code"
            android:layout_gravity="center_horizontal"
            android:hint="@string/edit_text_product_code"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_add_product"
            android:id="@+id/button_add_product" />
    </LinearLayout>

</LinearLayout>
